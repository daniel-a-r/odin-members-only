<!DOCTYPE html>
<html lang="en">
  <%- include('./partials/head') %>
  <body>
    <h1>hello world</h1>
    <nav>
      <% if (locals.currentUser) { %>
        <h1>Hello <%= locals.currentUser.username %></h1>
        <ul>
        <% if (!locals.currentUser.member) { %>
          <li><a href="/join">Become a member</a></li>
        <% } %>
          <li><a href="/new-message">Create a post</a></li>
          <li><a href="/logout">Logout</a></li>
        </ul>
        <ul>
          <% messages.forEach(msg => { %>
            <li>
              <p><%= msg.user %></p>
              <p><%= msg.subject %></p>
              <p><%= msg.content %></p>
              <p><%= msg.timestamp %></p>
              <% if (locals.currentUser.admin) { %>
                <form action="/<%= msg.id %>" method="post">
                  <button type="submit">Delete</button>
                </form>
              <% } %>
            </li>
          <% }) %>
        </ul>
      <% } else { %>
        <ul>
          <li><a href="/sign-up">Sign Up</a></li>
          <li><a href="/login">Login</a></li>
        </ul>
      <% } %>
    </nav>
  </body>
</html>
